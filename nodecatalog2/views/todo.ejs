        <% for (var i = 0; i < todos.products.length; i++) { %>
            <p>Title: <%=todos.products[i].title %></p>
            <p>Description: <%=todos.products[i].description %></p>
            <img src= "/assets/<%=todos.products[i].image %>" width= "100px" height= "100">
            <p>Quantity: <%=todos.products[i].quantity %></p>
            <button type = "submit">Delete</button>
            <button type = "submit" onClick = "show()">Edit</button>
            <form>
                <input type = "text" name = "title" placeholder="title" required/>
                <input type = "text" name = "description" placeholder="description" required/>
                <input type = "text" name = "quantity" placeholder="quantity" required/>
                <button type = "submit">Submit</button>
            </form>
            
            <p>---------------------------------------------</p>
        <%} %>
